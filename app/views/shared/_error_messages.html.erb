<% if @user.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h4>Sorry, <%= pluralize(@user.errors.count, "thing") %> went wrong:</h3>
    </div>
    <div class="panel-body">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>