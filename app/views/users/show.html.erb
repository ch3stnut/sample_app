<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'users/stats' %>
    </section>
  </aside>
  <div class="col-sm-8">
    <%= render 'users/follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
    <h3>Microposts: This dawg wrote <%= @user.microposts.count %> of them</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>